<body>
  <header>
    <h1>Because this:</h1>
    <button type="button" onclick="location.href='/'">
      🏠&#xFE0F; Home
    </button>
    <button type="button" onclick="copylink()">
      🔗&#xFE0F; Copy link
    </button>
    <button type="button" onclick="flipboard()">
      🔄&#xFE0F; Flip board
    </button>
  </header>
  <img id="img" src="/?fen=<%= fen %><%= flip ? '&flip' : '' %>&img" alt="">

  <script>
    const copylink = () => {
      navigator.clipboard.writeText(location.href)
    }

    const flipboard = () => {
      const params = new URLSearchParams(location.search)
      if (params.has('flip')) { params.delete('flip') }
      else { params.set('flip', '') }
      location.search = params.toString();
    }
  </script>
  <style>
    header {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 8px;
    }

    header>h1 {
      flex: 1;
      line-height: 1;
      margin: 0;
    }
  </style>
</body>

</html>